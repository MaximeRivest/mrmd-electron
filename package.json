{
  "name": "mrmd-electron",
  "version": "0.1.0",
  "description": "Minimal zen markdown editor with collaborative notebooks",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "bundle": "node scripts/bundle-siblings.js",
    "prebuild": "npm run bundle",
    "build": "electron-builder --config electron-builder.config.cjs",
    "build:linux": "electron-builder --linux --config electron-builder.config.cjs",
    "build:mac": "electron-builder --mac --config electron-builder.config.cjs",
    "build:win": "electron-builder --win --config electron-builder.config.cjs",
    "build:dir": "electron-builder --dir --config electron-builder.config.cjs",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "fzf": "^0.5.2",
    "mrmd-jupyter-bridge": "file:../mrmd-jupyter-bridge",
    "mrmd-project": "file:../mrmd-project",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.0",
    "esbuild": "^0.27.2"
  }
}
